            <p class="lead">

                <div class="input-group">
                    <select class="custom-select" id="select_timezone">
                        <option selected value="">Choose Timezone.</option>
                    </select>
                    <div class="input-group-append">
                        <button id="btn_getTime" class="btn btn-outline-secondary" type="button">Get the time</button>
                    </div>
                </div>
            </p>
        </main>
    </form>
    <footer class="mastfoot mt-auto">
        <div class="inner">
            <p>Cover template for <a href="https://getbootstrap.com/">Bootstrap</a>, Powered by RJ Ramirez</p>
        </div>
    </footer>
